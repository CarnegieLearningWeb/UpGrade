{
  "compilerOptions": {
    "outDir": "dist",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,  
    "sourceMap": true,
    "baseUrl": ".",
    "importHelpers": true,
    "target": "esnext",
    "module": "esnext",
      "lib": [
        "esnext",
      ],
      "paths": {
          "*": [
              "node_modules/*"
          ],
          "shared": [
              "../shared/*"
          ],
          "types": [
              "../types/*"
          ],
          "ts-backend": [
            "../ts-lib-tester-backend-server/src/*"
          ]
      },
      "skipLibCheck": true
  },
  "include": ["tests/**/*"]
}