{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "strict": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "module": "es2020",
    "target": "es2015",
    "typeRoots": ["./node_modules/@types"],
    "lib": ["es2018", "dom"],
    "paths": {
      "upgrade_types": ["../../types"]
    }
  }
}
